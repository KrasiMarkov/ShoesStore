@model AddShoeFormModel

@{
    ViewData["Title"] = "Add Shoes";
}
<div class="container">
    <div class="row">
        <div class="col-6">

            <h2 class="heading-margin">Add Shoes</h2>
           
            <form method="post">
                <div class="form-group">
                    <label asp-for="Brand"></label>
                    <input asp-for="Brand" class="form-control" placeholder="Nike, Adidas, Puma, etc....">
                    <span asp-validation-for="Brand" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" placeholder="Air Max, Supernova, Smash, etc....">
                    <span asp-validation-for="Model" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Size"></label>
                    <input asp-for="Size" class="form-control" placeholder="37, 39, 43, etc....">
                    <span asp-validation-for="Size" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color"></label>
                    <input asp-for="Color" class="form-control" placeholder="Blue, yellow, green, etc....">
                    <span asp-validation-for="Color" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Matter"></label>
                    <input asp-for="Matter" class="form-control" placeholder="Suede, leather, cloth, etc....">
                    <span asp-validation-for="Matter" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Remarks, condition, delivery, etc....."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here.....">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                       @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>

                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary" type="submit" value="Save"/>
            </form>
        </div>
    </div>

</div>