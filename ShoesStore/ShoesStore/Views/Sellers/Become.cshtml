@model BecomeSellerFormModel

@{ 
    ViewData["Title"] = "Become Seller";
}

<div class="container">
    <div class="row">
        <div class="col-6">

            <h2 class="heading-margin">Become Seller</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Maglov, Voltron, etc.....">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+359-777-777-777">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>
              
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>

</div>