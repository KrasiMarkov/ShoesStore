
@model List<ShoeListingViewModel>

@{
    ViewData["Title"] = "Best Shoes";
}

@{ 
    var firstShoe = Model.Any() ? Model[0] : null;
    var secondShoe = Model.Count > 1 ? Model[1] : null;
    var thirdShoe = Model.Count > 2 ? Model[2] : null;
    var forthShoe = Model.Count > 3 ? Model[3] : null;

}

@if (!Model.Any())
{
<div class="jumbotron">
    <h1 class="display-4">Wellcome to the best place for Shoes!</h1>
    <p class="lead">There are no shoes in the system currently available so why don't you just add one?</p>
    <hr class="my-4">
    <p class="lead">
        <a asp-controller="Shoes" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Shoes</a>
    </p>
</div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstShoe != null)
        {
        <div class="carousel-item active">
            <img class="d-block w-50" src="@firstShoe.ImageUrl" alt="@firstShoe.Brand @firstShoe.Model">
            <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-primary" asp-controller="Shoes" asp-action="Details" asp-all-route-id="@firstShoe.Id">@firstShoe.Brand @firstShoe.Model</a></h5>
            </div>
        </div>
        }
        @if (secondShoe != null)
        {
            <div class="carousel-item">
                <img class="d-block w-50" src="@secondShoe.ImageUrl" alt="@secondShoe.Brand @secondShoe.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Shoes" asp-action="Details" asp-all-route-id="@secondShoe.Id">@secondShoe.Brand @secondShoe.Model</a></h5>
                </div>
            </div>
        }
        @if (thirdShoe != null)
        {
            <div class="carousel-item">
                <img class="d-block w-50" src="@thirdShoe.ImageUrl" alt="@thirdShoe.Brand @thirdShoe.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Shoes" asp-action="Details" asp-all-route-id="@thirdShoe.Id">@thirdShoe.Brand @thirdShoe.Model</a></h5>
                </div>
            </div>
        }
        @if (forthShoe != null)
        {
            <div class="carousel-item">
                <img class="d-block w-50" src="@forthShoe.ImageUrl" alt="@forthShoe.Brand @forthShoe.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Shoes" asp-action="Details" asp-all-route-id="@forthShoe.Id">@forthShoe.Brand @forthShoe.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>